@model List<Model.EF.Menu>
<div class="call">
    <p><span>Need help?</span> call us <span class="number">0345678999</span></span></p>
</div>
<div class="account_desc">
    @{
        var session = (ShopVanPhongPham.Common.UserLogin)Session[ShopVanPhongPham.Areas.Admin.Controllers.CommonCOnstants.USER_SESSION];
    }
    @if (session == null)
    {
        <ul>
            @foreach (var item in Model)
            {
                <li><a href="@item.link" target="@item.target">@item.text</a></li>
            }


        </ul>
    }
    else
    {
        <ul>
            <li>Xin chào:@session.UserName</li>
            <li>@Html.ActionLink("Thoát", "Logout", "User")</li>
        </ul>
    }
</div>
<div class="clear"></div>